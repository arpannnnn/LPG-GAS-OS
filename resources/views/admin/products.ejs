<section class="orders light-section">
  <div class="container mx-auto pt-8 sm:pt-12"> <!-- Adjust padding for smaller screens -->
    <section class="profile py-8 sm:py-16"> <!-- Adjust padding for smaller screens -->
      <div class="container mx-auto">
        <h1 class="text-2xl sm:text-3xl -mt-6 sm:-mt-12 font-bold -mb-6 sm:-mb-10">Welcome To The Product List, </h1> <!-- Adjust text size and margin for smaller screens -->
      </div>
    </section>
    <h1 class="font-bold text-xl sm:text-lg mb-2 sm:mb-4">All Products</h1> <!-- Adjust text size and margin for smaller screens -->

    <% if (successMessage && successMessage.length > 0) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-2 sm:px-4 py-2 sm:py-3 rounded relative" role="alert"> <!-- Adjust padding for smaller screens -->
        <strong class="font-bold">Success!</strong>
        <span class="block sm:inline"><%= successMessage %></span>
      </div>
    <% } %>

    <% if (errorMessage && errorMessage.length > 0) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-2 sm:px-4 py-2 sm:py-3 rounded relative" role="alert"> <!-- Adjust padding for smaller screens -->
        <strong class="font-bold">Error!</strong>
        <span class="block sm:inline"><%= errorMessage %></span>
      </div>
    <% } %>

    <div class="overflow-x-auto"> <!-- Add horizontal scrolling for smaller screens -->
      <table class="w-full table-auto bg-white">
        <thead>
          <tr>
            <th class="px-2 sm:px-4 py-2 sm:py-2 text-left">Name</th> <!-- Adjust padding for smaller screens -->
            <th class="px-2 sm:px-4 py-2 sm:py-2 text-left">Image</th> <!-- Adjust padding for smaller screens -->
            <th class="px-2 sm:px-4 py-2 sm:py-2 text-left">Price</th> <!-- Adjust padding for smaller screens -->
            <th class="px-2 sm:px-4 py-2 sm:py-2 text-left">Size</th> <!-- Adjust padding for smaller screens -->
            <th class="px-2 sm:px-4 py-2 sm:py-2 text-left">Action</th> <!-- Adjust padding for smaller screens -->
          </tr>
        </thead>
        <tbody id="productTableBody"></tbody>
      </table>
    </div>
  </div>
</section>
